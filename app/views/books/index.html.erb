<p id="notice">
	<%=  notice %>
</p>

<h1>Books</h1>
<table>
	<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %>&emsp;<%= link_to "Edit", edit_book_path(book) %>&emsp;<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
	<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
    <div id="error-explanation">
      <h3><%= @book.errors.count %>件のエラーが発生しました。</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="title-index">
	<label>Title</label><br>
	<%= f.text_field :title %>
  </div>

  <div class="body-index">
	<label>Body</label><br>
	<%= f.text_area :body %>
</div>

	<%= f.submit "Create Book" %>

	<% end %>
